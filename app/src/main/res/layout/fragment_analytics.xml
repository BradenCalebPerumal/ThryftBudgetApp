<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/rwhite"
    android:paddingBottom="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Title and Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_light_card"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="12dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:layout_marginEnd="12dp"
                android:layout_gravity="start"
                android:padding="8dp" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analytics"
                android:textSize="20sp"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                android:layout_marginBottom="12dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dateRangeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="16dp">

            <EditText
                android:id="@+id/startDateInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Start Date"
                android:focusable="false"
                android:inputType="none"
                android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                android:padding="10dp"
                android:background="@android:drawable/edit_text"/>

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/endDateInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="End Date"
                android:focusable="false"
                android:inputType="none"
                android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                android:padding="10dp"
                android:background="@android:drawable/edit_text"/>
        </LinearLayout>

        <Button
            android:id="@+id/applyDateFilterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp" />


        <!-- PieChart: Income vs Expense Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_light_card"
            android:padding="16dp"
            android:gravity="center_horizontal"
            android:elevation="4dp"
            android:layout_marginBottom="32dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Income vs Expense"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/blackk"
                android:layout_marginBottom="12dp" />
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/incomeExpensePieChart"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginBottom="32dp" />
        </LinearLayout>

        <!-- Income by Category Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_light_card"
            android:padding="16dp"
            android:gravity="center_horizontal"
            android:elevation="4dp"
            android:layout_marginBottom="32dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Income by Category"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/blackk"
                android:layout_marginBottom="12dp" />
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/incomeByCategoryChart"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginBottom="32dp" />
        </LinearLayout>

        <!-- Expense by Category Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_light_card"
            android:padding="16dp"
            android:gravity="center_horizontal"
            android:elevation="4dp"
            android:layout_marginBottom="32dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expense by Category"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/blackk"
                android:layout_marginBottom="12dp" />
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/expenseByCategoryChart"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginBottom="32dp" />
        </LinearLayout>

        <!-- Bar Chart: Income vs Expense Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_light_card"
            android:padding="16dp"
            android:gravity="center_horizontal"
            android:elevation="4dp"
            android:layout_marginBottom="36dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Income vs Expense (Bar)"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/blackk"
                android:layout_marginBottom="12dp" />
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/categoryBarChart"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginBottom="36dp" />
        </LinearLayout>


        <!-- Timeline Chart: Goals vs Actual -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_light_card"
            android:padding="16dp"
            android:gravity="center_horizontal"
            android:elevation="4dp"
            android:layout_marginBottom="36dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goals vs Actual Line Chart"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/blackk"
                android:layout_marginBottom="12dp" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/goalsTimelineChart"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginBottom="36dp" />
        </LinearLayout>

        <!-- Category Spending vs Goal Chart -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_light_card"
            android:elevation="4dp"
            android:layout_marginBottom="32dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spending vs Goals per Category"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/blackk"
                android:layout_marginBottom="12dp" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/categoryGoalsChart"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginBottom="12dp" />
        </LinearLayout>


        <!-- Summary Card -->
        <LinearLayout
            android:id="@+id/summaryCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_light_card"
            android:elevation="4dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/summaryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smart Insights"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/blackk"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/topCategoryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top Category: Loading..."
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/blackk"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/highestTransactionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Highest Transaction: Loading..."
                android:textSize="14sp"
                android:textColor="@color/blackk"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/suggestionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Tip: Loading..."
                android:textSize="14sp"
                android:textColor="@color/blackk" />
        </LinearLayout>
        <Button
            android:id="@+id/exportPdfBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Export Analytics as PDF"
            android:textStyle="bold"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="14dp"
            android:layout_marginTop="16dp" />

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp" />
    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_light_card"
        android:padding="16dp"
        android:elevation="4dp">

        <!-- ðŸ”™ Back Button and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_back"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/purple_500"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- ðŸŒŸ Preferences -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferences"
            android:textColor="@color/purple_500"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Item: Privacy -->
        <LinearLayout
            android:id="@+id/privacyLayout"
            style="@style/SettingsItemLayout"
            android:layout_marginBottom="8dp">
            <ImageView android:src="@drawable/ic_shield" style="@style/SettingsItemIcon"/>
            <TextView android:text="Privacy" style="@style/SettingsItemText"/>
        </LinearLayout>

        <!-- Item: Notifications -->
        <!-- Item: Notifications with Toggle -->
        <LinearLayout
            android:id="@+id/notificationLayout"
            style="@style/SettingsItemLayout"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:paddingEnd="8dp">

            <ImageView android:src="@drawable/ic_bell" style="@style/SettingsItemIcon"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notifications"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp"/>

            <Switch
                android:id="@+id/notificationSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="@color/purple_500"
                android:trackTint="@color/purple_200"/>
        </LinearLayout>

        <!-- Item: Appearance (Dark Mode) -->
        <LinearLayout
            android:id="@+id/darkModeLayout"
            style="@style/SettingsItemLayout"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:paddingEnd="8dp">

            <ImageView android:src="@drawable/ic_palette" style="@style/SettingsItemIcon"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dark Mode"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp"/>

            <Switch
                android:id="@+id/darkModeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="@color/purple_500"
                android:trackTint="@color/purple_200"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/purple_200"
            android:layout_marginVertical="8dp" />

        <!-- ðŸ“ž Support -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Support and Feedback"
            android:textColor="@color/purple_500"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/contactUsLayout"
            style="@style/SettingsItemLayout"
            android:layout_marginBottom="8dp">
            <ImageView android:src="@drawable/ic_phone" style="@style/SettingsItemIcon"/>
            <TextView android:text="Contact Us" style="@style/SettingsItemText"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/instagramLayout"
            style="@style/SettingsItemLayout"
            android:layout_marginBottom="16dp">
            <ImageView android:src="@drawable/ic_instagram" style="@style/SettingsItemIcon"/>
            <TextView android:text="Instagram" style="@style/SettingsItemText"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/purple_200"
            android:layout_marginVertical="8dp" />

        <!-- ðŸšª Logout -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textColor="@color/purple_500"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/logoutLayout"
            style="@style/SettingsItemLayout">
            <ImageView android:src="@drawable/ic_logout" style="@style/SettingsItemIcon"/>
            <TextView android:text="Logout" style="@style/SettingsItemText"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
